@using Web.Areas.Admin.Controllers;

@Html.DevExpress().HtmlEditor(settings => {
    settings.Name = "HtmlEditor3";
    settings.CallbackRouteValues = new { Controller = "Upload", Action = "HtmlEditor3Partial" };
    settings.Width = 500;
    //settings.ToolbarMode = HtmlEditorToolbarMode.Menu;
    HtmlEditorToolbar toolbar = new HtmlEditorToolbar();
    toolbar.Items.Add(new ToolbarCutButton());
    toolbar.Items.Add(new ToolbarCopyButton());
    toolbar.Items.Add(new ToolbarPasteButton());
    toolbar.Items.Add(new ToolbarPasteFromWordButton());
    toolbar.Items.Add(new ToolbarUndoButton(true));
    toolbar.Items.Add(new ToolbarRedoButton());
    toolbar.Items.Add(new ToolbarRemoveFormatButton());
    toolbar.Items.Add(new ToolbarSuperscriptButton());
    toolbar.Items.Add(new ToolbarSubscriptButton());
    toolbar.Items.Add(new ToolbarBoldButton(true));
    toolbar.Items.Add(new ToolbarItalicButton());
    toolbar.Items.Add(new ToolbarUnderlineButton());
    toolbar.Items.Add(new ToolbarStrikethroughButton());
    toolbar.Items.Add(new ToolbarInsertFlashDialogButton(true));
    toolbar.Items.Add(new ToolbarInsertVideoDialogButton());
    toolbar.Items.Add(new ToolbarInsertAudioDialogButton());
    toolbar.Items.Add(new ToolbarInsertYouTubeVideoDialogButton());
    toolbar.Items.Add(new ToolbarFullscreenButton(true));
    settings.Toolbars.Add(toolbar);

    

    settings.SettingsDialogs.InsertImageDialog.SettingsImageUpload.UploadCallbackRouteValues = new { Controller = "Upload", Action = "HtmlEditor3PartialImageUpload" };
    settings.SettingsDialogs.InsertImageDialog.SettingsImageUpload.UploadFolder = UploadControllerHtmlEditor3Settings.ImageUploadDirectory;
    settings.SettingsDialogs.InsertImageDialog.SettingsImageUpload.ValidationSettings.Assign(UploadControllerHtmlEditor3Settings.ImageUploadValidationSettings);

    settings.SettingsDialogs.InsertFlashDialog.SettingsFlashUpload.UploadCallbackRouteValues = new { Controller = "Upload", Action = "HtmlEditor3PartialFlashUpload" };
    settings.SettingsDialogs.InsertFlashDialog.SettingsFlashUpload.UploadFolder = UploadControllerHtmlEditor3Settings.FlashUploadDirectory;
    settings.SettingsDialogs.InsertFlashDialog.SettingsFlashUpload.ValidationSettings.Assign(UploadControllerHtmlEditor3Settings.FlashUploadValidationSettings);

    settings.SettingsDialogs.InsertImageDialog.SettingsImageSelector.Assign(UploadControllerHtmlEditor3Settings.ImageSelectorSettings);
    settings.SettingsDialogs.InsertFlashDialog.SettingsFlashSelector.Assign(UploadControllerHtmlEditor3Settings.FlashSelectorSettings);
}).GetHtml()