@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var stt = 0;
}
@using Web.Model
@using Web.Model.CustomModel
@using Web.Core
@model List<tbl_eMagazine>
<script src="/Scripts/jquery.validate.min.js"></script>
<script src="~/AppJs/checkDate.js"></script>
<form method="get" action="/Admin/eMagazine/ThongKe" id="formTimKiem" >
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h3 class="panel-title">Danh sách emagazine</h3>
                    <div class="row">

                        <div class="form-group col-md-3">
                            <div class="input-group">
                                <input type="text" name="tuNgay" id="tuNgay" class="clear form-control datepicker-mask" value="@Request["tuNgay"]" placeholder="Từ Ngày" />
                                <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            <div class="input-group">
                                <input type="text" name="denNgay" id="denNgay" class="form-control datepicker-mask" placeholder="Đến Ngày" value="@Request["denNgay"]" />
                                <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>

                            </div>
                            <p style="color: red" id="show_error" hidden>Ngày kết thúc phải nhỏ hơn ngày bắt đầu</p>
                        </div>
                        <div class="col-md-3">
                            <button type="submit" id="btnSearch" class="btn btn-purple waves-effect waves-light">Tìm kiếm</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</form>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Danh mục emagazine</h3>
                <div style="top: 8px;position: absolute; right: 40px;" class="pull-right">
                    <a href="/Admin/eMagazine/ExportThongKe" type="button" class="btn btn-success waves-effect waves-light" onclick="">Thống kê</a>
                </div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="table-responsive" id="gridDataThongKe">
                            <div class="table-responsive" id="gridDataThongKe">
                                <table class="table table-striped cabn_datatable table-responsive">
                                    <thead>
                                        <tr>
                                            <th>
                                                <input type="hidden" id="hdfID" />
                                                <div class="checkbox">
                                                    <input id="chkall" type="checkbox">
                                                    <label for="chkall"></label>
                                                </div>
                                            </th>
                                            <th>STT</th>
                                            <th>Tên emagazine</th>
                                            <th>Người khởi tạo</th>
                                            <th>Ngày đăng</th>
                                            <th>Nhuận bút</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            stt++;
                                            <tr>
                                                <td style="vertical-align: middle;">
                                                    <div class="checkbox">
                                                        <input type="checkbox" value="@item.ID" id="chk'@item.ID'">
                                                        <label for="chk'@item.ID'"></label>
                                                    </div>
                                                </td>
                                                <td style="vertical-align: middle;">@stt</td>
                                                <td style="vertical-align: middle;">@item.Name</td>
                                                <td style="vertical-align: middle;">@item.TenNguoiKhoiTao</td>
                                                <td style="vertical-align: middle;">@HelperDateTime.ConvertDateToString(item.CreatedDate)</td>
                                                <td style="vertical-align: middle;">@string.Format("{0:0,0}", item.NewMoney)</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
