@using Web.Core
@using Web.Model
@model tbl_Magazine
@{
    var lstUserAdmin = (List<tbl_UserAdmin>)TempData["lstUserAdmin"];
    var lstFile = (List<tbl_fieldfiles>)TempData["lstFile"];
}


<div class="form-group col-md-12">
    <label class="col-md-2 control-label">Tiêu đề: </label>
    <div class="col-md-10">@Model.Title</div>
</div>
@if (lstFile.Count() > 0)
{
    <div class="form-group col-md-12">
        <label class="col-md-2 control-label">File đính kèm: </label>
        <div class="col-md-10">
            <ul style="padding-left:15px;">
                @foreach (var item in lstFile)
                {
                    <li>
                        <a href="@item.LinkFile">
                            <i class="fa fa-download"></i>
                            @item.ReplaceName | 
                        </a>
                        <a href="/Home/ViewFile?linkdown=@item.LinkFile" target="_blank">
                            <i class="fa fa-search"></i> xem
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
}

<div class="form-group col-md-12">
    <label class="col-md-2 control-label">Ngày đăng: </label>
    <div class="col-md-10">@string.Format("{0: dd/MM/yyyy HH:mm}", Model.CreatedDate)</div>
</div>
<div class="text-center">
    <button class="btn btn-default" data-dismiss="modal" type="button">Đóng</button>
</div>
<style>
    .Details img {
        max-width: 100%;
        height: auto !important;
    }
</style>