@using System.Web.UI.WebControls
@using OfficeOpenXml.FormulaParsing.Excel.Functions.RefAndLookup
@using Web.Model
@model List<tbl_News>
@{
    ViewBag.Title = "";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var rowUser = (tbl_UserAdmin)ViewBag.rowUser;
    var lstId = (List<string>)ViewBag.lstQuyenId;
    var lstQuyTrinh = (List<View_DataHome>)TempData["lstQuyTrinh"];
    var tt = 0;
    var langCode = "vn";
    if (Session["langCodeDefaut"] != null)
    {
        langCode = Session["langCodeDefaut"].ToString();
    }
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="pull-left page-title">Xin chào, @rowUser.FullName !</h4>
        <ol class="breadcrumb pull-right">
            <li><a href="#">Trang chủ</a></li>
            <li class="active">Thống kê</li>
        </ol>
    </div>
</div>

<div class="row">
    @foreach (var item in lstQuyTrinh)
    {
        <div class="col-md-6 col-sm-6 col-lg-4">
            <div class="mini-stat clearfix bx-shadow" onclick="window.location.href='/Admin/News?Status=@item.ID'">
                <span class="mini-stat-icon bg-primary"><i class="fa fa-tag" aria-hidden="true"></i></span>
                <div class="mini-stat-info text-right text-muted">
                    <span class="counter">@item.SoLuong</span>
                    @if (langCode == "vn")
                    {
                        @item.Name
                    }
                    else
                    {
                        @item.NameEnglish
                    }
                </div>
            </div>
        </div>
    }
</div>

<style>
    .mini-stat {
        cursor: pointer;
    }
</style>
<script src="~/AppJs/news.js"></script>
