@using Web.Areas.Admin.Controllers
@using Web.Core
@using Web.Model
@model List<tbl_Video>
@{
    Layout = null;
    var homeVideo = (tbl_Video)ViewBag.homeVideo;
    var dothtml = ".html";
} 

@if (Model.Count > 0)
{
    <div class="wrp">
        <div class="left">
            <a href="/Video" title="Truyền hình" class="title">@ConfigTextController.GetValueCFT("truyenhinh")</a> 
            <a href="/video/@Model[0].ID/@HelperString.RemoveMark(Model[0].Title)@dothtml" title="" class="name">@Model[0].Title</a>
            <div class="cont dotdotdot">
                @Model[0].Description
            </div>
        </div>
        <div class="mid">
            <div class="khungAnh">
                <a class="khungAnhCrop" href="/video/@Model[0].ID/@HelperString.RemoveMark(Model[0].Title)@dothtml" title="@Model[0].Title">
                    <img data-src="@Model[0].Images" />
                </a>
            </div>
        </div>
        <div class="right">
            @if (Model.Count > 1)
            {
                for (int i = 1; i < Model.Count; i++)
                {
                    <div class="item">
                        <a href="/video/@Model[i].ID/@Web.Core.HelperString.RemoveMark(Model[i].Title)@dothtml" title="@Model[i].Title" class="name">@Model[i].Title</a>
                        <div class="khungAnh">
                            <a class="khungAnhCrop" href="/video/@Model[i].ID/@Web.Core.HelperString.RemoveMark(Model[i].Title)@dothtml" title="@Model[i].Title">
                                <img id="imgyoutube" src="@(Model[i].Images ?? "Content/Site/images/noimage.png")"/>
                            </a>
                        </div>
                        <div class="cb"></div>
                    </div>
                }
            } 
        </div>
        <div class="cb"></div>
    </div>        
}
 