@using Web.Model
@{
    var langCode = "vn";
    if(Session["langCodeHome"]!=null)
    {
        langCode = Session["langCodeHome"].ToString();
    }
    Layout = null;
    var lstAdvHome1 = (List<tbl_Advert>)TempData["lstAdvHome1"];
    lstAdvHome1 = lstAdvHome1.Where(g => g.LangCode == langCode).ToList();
    var lstAdvHome2 = (List<tbl_Advert>)TempData["lstAdvHome2"];
    lstAdvHome2 = lstAdvHome2.Where(g => g.LangCode == langCode).ToList();
}


<div class="dnmobile-l">
    @foreach (var item in lstAdvHome1)
    {
        <div class="group">
            <a href="@item.Url" @(item.isNewTab ? "target='_blank'" : "") title="@item.Name" class="banner bannerleft">
                <img src="@item.Image" alt="@item.Name" />
            </a>
        </div>
    }
</div>
<div class="dn dbmobile-l">
    @foreach (var item in lstAdvHome2)
    {
        <div class="group">
            <a href="@item.Url" @(item.isNewTab ? "target='_blank'" : "") title="@item.Name" class="banner bannerleft">
                <img src="@item.Image" alt="@item.Name" />
            </a>
        </div>
    }
</div>