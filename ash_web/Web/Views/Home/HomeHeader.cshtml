{
    <!--CSS responsive-->
    <link href="~/assets/display/Css/css_rwd_common.min.css" rel="stylesheet" />
    <link href="~/assets/display/Css/css_rwd.min.css" rel="stylesheet" />
}
<script src="/Content/Admin/js/jquery.min.js"></script>
<script src="/Content/Admin/assets/select2/select2.min.js"></script>
@*<script src="https://ajax.googleapis.com/ajax/libs/prototype/1.7.3.0/prototype.js"></script>*@ 
<script src="/Scripts/jsservice.js"></script>

@{
    var objNews = (tbl_News) TempData["objNews"];
    if (objNews != null)
    {
        var url = HttpContext.Current.Request.Url.AbsoluteUri;
        var img = HttpContext.Current.Request.Url.Scheme + "://" + HttpContext.Current.Request.Url.Host + objNews.Photo;
        <meta property="og:url" content="@url" />
        <meta property="og:type" content="article" />
        <meta property="og:title" content="@objNews.Title" />
        <meta property="og:description" content="@objNews.Description" />
        <meta property="og:image" content="@img" />
    }
}
 