@using Web.Areas.Admin.Controllers
@using Web.Core
@using Web.Model
@model List<tbl_Video>
@{
    Layout = null; 
    var dothtml = ".html";
} 

@if (Model.Count > 0)
{
    <div id="truyenhinhright">
        <a href="/Video" title="Truyền hình" class="title">@ConfigTextController.GetValueCFT("truyenhinh")</a> 
        <div class="group">
            @foreach (var item in Model)
            {
                <div class="item">
                    <div class="khungAnh">
                        <a class="khungAnhCrop" href="/video/@item.ID/@Web.Core.HelperString.RemoveMark(item.Title)@dothtml" title="@item.Title">
                            <img id="imgyoutube" src="@(item.Images ?? "Content/Site/images/noimage.png")"/>
                        </a>
                    </div>
                    <div class="info">
                        <a href="/video/@item.ID/@Web.Core.HelperString.RemoveMark(item.Title)@dothtml" title="@item.Title" class="name">@item.Title</a>
                    </div>
                </div>
            }
        </div>
    </div>         
}
 