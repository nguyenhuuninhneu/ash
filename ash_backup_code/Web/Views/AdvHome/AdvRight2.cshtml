
@using Web.Model
@{
    var langCode = "vn";
    if(Session["langCodeHome"]!=null)
    {
        langCode = Session["langCodeHome"].ToString();
    }
    Layout = null;
    var lst = (List<tbl_Advert>)TempData["lstAdvRight2"];
    lst = lst.Where(g => g.LangCode == langCode).ToList();
} 

@foreach (var item in lst)
{
    <a href="@item.Url" @(item.isNewTab ? "target='_blank'" :"") title="@item.Name" class="banner">
        <img src="@item.Image" alt="@item.Name" />
    </a>
}
