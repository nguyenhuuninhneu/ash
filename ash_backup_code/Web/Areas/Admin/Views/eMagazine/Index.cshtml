@{
    ViewBag.Title = "Quản lý slide ảnh";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var lstAction = (List<int>)HttpContext.Current.Session["Action"]; 
    var sc = Request["sc"];
}
@using Web.Model
@using Web.Model.CustomModel
@model List<tbl_eMagazine>
<script src="~/Content/Admin/assets/ckfinder/ckfinder.js"></script>
<script src="~/Content/Admin/assets/ckeditor/ckeditor.js"></script>
<script src="~/Content/Admin/assets/ckeditor/config.js"></script>
<script src="~/AppJs/emagazine.js"></script>

 
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Danh sách eMagazine</h3>
                <div style="top: 8px;position: absolute; right: 40px;" class="pull-right">
                    @if (lstAction != null && lstAction.Contains((int)EnumHelper.Action.Add))
                    {
                        <button type="button" class="btn btn-primary waves-effect waves-light" onclick="emagazine.loadfrmAdd()"><i class="fa fa-plus"></i> Thêm mới</button>
                    }
                    @if (lstAction != null && lstAction.Contains((int)EnumHelper.Action.Edit))
                    {
                        <button type="button" class="btn btn-success waves-effect waves-light" onclick="emagazine.onupdateposittion() "><i class="fa fa-refresh"></i> Cập nhật danh sách</button>
                    }
                    @if (lstAction != null && lstAction.Contains((int)EnumHelper.Action.Delete))
                    {
                        <button type="button" class="btn btn-danger waves-effect waves-light" onclick="emagazine.onmultidelete() "><i class="fa fa-trash-o"></i> Xóa nhiều</button>
                    }
                </div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="table-responsive" id="gridData">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () { 
        emagazine.loadData(1);

        var sc = '@sc';
        if (sc == 1) alertmsg.success("Cập nhật thành công!");
        if (sc == 2) { alertmsg.error("Cập nhật thất bại!"); }
    });
</script>