<script>
    lightbox.option({
        'resizeDuration': 200,
        'wrapAround': true
    });
    $(function () {
        $.cookie("listid");
        chat.messenger('@User.ID');
        chat.loadChat($.cookie("listid"));
    });

    function logout() {
        $.removeCookie("listid", "");
        window.location.href = '/Account/Logout';
    }

    function FilterAcount(check) {
        if (check != true) $("#slideThree").prop("checked", true);
        var input, name, i;
        input = $('#searchacount input').val().toUpperCase();
        for (i = 1; i <= $('#listacount li').length; i++) {
            name = $('#listacount li:nth-child('+i+')').find('.name').text();
            if (name.toUpperCase().indexOf(input) > -1) {
                $('#listacount li:nth-child(' + i + ')').show();
            } else {
                $('#listacount li:nth-child(' + i + ')').hide();
            }
        }
    }
    $('#slideThree').change(function () {
        $('#searchacount').val('');
        if ($("#slideThree").prop("checked") == false) {
            $('.offline').hide();
        } else {
            $('.offline').show();
        }
    });

    function OpenCreateGroup()
    {
        modal.Render("/Admin/Home/AddGroupChat", "Thêm mới nhóm", "modal-lg");
    }
</script>

