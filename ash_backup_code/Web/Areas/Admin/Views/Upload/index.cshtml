@{
    ViewBag.Title = "Upload";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";   
}
@using (Html.BeginForm("UploadUpload", "Upload", FormMethod.Post))
{
    @Html.DevExpress().UploadControl(settings =>
{
    settings.Name = "Upload";
    settings.CallbackRouteValues = new { Controller = "Upload", Action = "UploadUpload" };

    settings.AdvancedModeSettings.EnableMultiSelect = true;
    settings.AdvancedModeSettings.EnableFileList = true;
    settings.AdvancedModeSettings.EnableDragAndDrop = true;

    settings.ShowUploadButton = true;
    settings.ShowProgressPanel = true;

    settings.ValidationSettings.Assign(Web.Areas.Admin.Controllers.UploadControllerUploadSettings.UploadValidationSettings);
}).GetHtml()
}


@using (Html.BeginForm())
{
    @Html.Action("HtmlEditor3Partial", "Upload")
}


