
@{
    ViewBag.Title = "Module";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var lstAction = (List<int>)HttpContext.Current.Session["Action"];
    var controllerName = (String)TempData["controllerName"];
}
@using Web.Model.CustomModel
@using Web.Model
@model List<Web.Model.module>
<script src="~/AppJs/module.js"></script>
<script src="~/AppJs/module_validate.js"></script>
<script src="~/Scripts/_references.js"></script>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">@controllerName</h3>
                <div style="top: 8px;position: absolute; right: 40px;" class="pull-right">
                    @if (lstAction != null && lstAction.Contains((int)EnumHelper.Action.Add))
                    {
                        <button type="button" class="btn btn-primary waves-effect waves-light" onclick="Module.loadfrmAdd() "><i class="fa fa-plus"></i> Thêm mới</button>
                    }
                    @if (lstAction != null && lstAction.Contains((int)EnumHelper.Action.Edit))
                    {
                        <button type="button" class="btn btn-success waves-effect waves-light" onclick="Module.onupdateposittion() "><i class="fa fa-refresh"></i> Cập nhật vị trí</button>
                    }
                    @if (lstAction != null && lstAction.Contains((int)EnumHelper.Action.Delete))
                    {
                        <button type="button" class="btn btn-danger waves-effect waves-light" onclick="Module.onmultidelete() "><i class="fa fa-trash-o"></i> Xóa nhiều</button>
                    }
                </div>
            </div>
            <div class="panel-body">
                
                <div class="row" style="padding-bottom:10px;">

                </div>
                <div class="row">

                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="table-responsive" id="gridData">

                        </div>
                        <div class="col-md-12" id="paginationholder">
                            <ul id="pagination" class="pagination"></ul>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>
<script>
    $(document).ready(function () {
        debugger;
        Module.loadData(1);
        $(".selectSeach").select2();

    });
</script>
