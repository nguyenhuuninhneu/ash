 
@using Web.Model;
@using Web.Core;
@using Web.Areas.Admin.Controllers
@model List<tbl_News_Custom>
@{ 
    var langCode = "vn";
    if(Session["langCodeHome"]!=null)
    {
        langCode = Session["langCodeHome"].ToString();
    }
    var dothtml = ".html";
    var lstNewHome1 = (List<tbl_News_Custom>)TempData["lstNewHome1"];
    Layout = null;
}
        @if (lstNewHome1.Count > 0)
        { 
            <div class="left">
                <div class="khungAnh">
                    <a class="khungAnhCrop" href="/pages/detail/@lstNewHome1[0].CategoryIdStr.Split(',')[0]/@lstNewHome1[0].ID/@HelperString.RemoveMark(lstNewHome1[0].Title)@dothtml" title="@lstNewHome1[0].Title">
                        <img src="@lstNewHome1[0].Photo" alt="@lstNewHome1[0].Title"/>
                    </a>
                </div>
                <a href="/pages/detail/@lstNewHome1[0].CategoryIdStr.Split(',')[0]/@lstNewHome1[0].ID/@HelperString.RemoveMark(@lstNewHome1[0].Title)@dothtml" title="@lstNewHome1[0].Title" class="name">@lstNewHome1[0].Title</a>
                <div class="cont dotdotdot">
                    @if (lstNewHome1[0].Description != null)
                    {
                        @Html.Raw(Common.RemoveHtmlTag(lstNewHome1[0].Description))
                    }
                </div>
            </div>
            <div class="right">
                <ul> 
                  @if (lstNewHome1.Count > 1)
                   {
                       for (int i = 1; i < lstNewHome1.Count; i++)
                       {
                           <li>
                               <div class="khungAnh">
                                   <a class="khungAnhCrop" href="/pages/detail/@lstNewHome1[i].CategoryIdStr.Split(',')[0]/@lstNewHome1[i].ID/@HelperString.RemoveMark(lstNewHome1[i].Title)@dothtml" title="@lstNewHome1[i].Title">
                                       <img alt="@lstNewHome1[i].Title" src="@lstNewHome1[i].Photo">
                                   </a>
                               </div>
                               <a href="/pages/detail/@lstNewHome1[i].CategoryIdStr.Split(',')[0]/@lstNewHome1[i].ID/@HelperString.RemoveMark(lstNewHome1[i].Title)@dothtml" title="@lstNewHome1[i].Title" class="name">@lstNewHome1[i].Title</a>
                               <div class="cb"></div>
                           </li>
                       }
                   }
                </ul>
            </div>
        }

<div class="cb"></div>
<div class="list"> 
        @foreach (var item in Model)
        {
            <div class="item">
                <div class="khungAnh">
                    <a class="khungAnhCrop" href="/pages/detail/@item.CategoryIdStr.Split(',')[0]/@item.ID/@HelperString.RemoveMark(item.Title)@dothtml" title="@item.Title">
                        <img src="@item.Photo" alt="@item.Title"/>
                    </a>
                </div>
                <a href="/pages/detail/@item.CategoryIdStr.Split(',')[0]/@item.ID/@HelperString.RemoveMark(item.Title)@dothtml" title="" class="name">@item.Title</a>
            </div>
        } 
</div>
   